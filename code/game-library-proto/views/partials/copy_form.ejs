<div class="field">
      <label class="label">Libary Tag</label>
      <div class="control">
        <input class="input" type="text" name="library_tag" placeholder="e.g. 123456" 
        <% if (library_tag) { %> value="<%= library_tag %>" <% }; %> required >
      </div>
    </div>

    <div class="field">
      <label class="label">Date Procured</label>
      <div class="control">
        <input class="input" type="date" name="dt_procured" 
        <% if (dt_procured) { %> value="<%= dt_procured %>" <% }; %> required >
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
      <div class="control">
        <button class="button is-text">Cancel</button>
      </div>
    </div>