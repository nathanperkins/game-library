<%- include('../partials/header'); %>

<div class="content">
<h2>Create a new title:</h2>
</div>

<form action='/game_titles/' method=POST>
<div class="field">
<label class="label">Name</label>
<div class="control">
    <input class="input" type="text" name="name" placeholder="e.g. Harvest Moon: Back to Nature">
</div>
</div>

<div class="field">
<label class="label">Description</label>
<div class="control">
    <textarea class="textarea" name="description" placeholder="Optional"></textarea>
</div>
</div>

<div class="field">
<label class="label">Genre</label>
<div class="control">
<div class="select" name="genre">
    <select>
    <option>Select genre</option>
    <option>RPG</option>
    <option>Adventure</option>
    <option>Arcade</option>
    <option>+ Add new</option>
    </select>
</div>
</div>
</div>

<div class="field">
<label class="label">Developer</label>
<div class="control">
    <input class="input" type="text" name="developer" placeholder=" ">
</div>
</div>

<div class="field">
<label class="label">Producer</label>
<div class="control">
    <input class="input" type="text" name="producer" placeholder=" ">
</div>
</div>

<div class="field is-grouped">
<div class="control">
    <button class="button is-link">Submit</button>
</div>
<div class="control">
    <button class="button is-text">Cancel</button>
</div>
</div>
</form>
<%- include('../partials/footer'); %>