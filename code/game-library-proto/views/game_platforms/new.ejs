<%- include('../partials/header'); %>

<div class="content">
        <h2>Create a new platform:</h2>
      </div>

<form action='/game_platforms/' method=POST>
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" type="text" name="name" placeholder="e.g. Playstation 4">
        </div>
      </div>

    <div class="field">
        <label class="label">Manufacturer</label>
        <div class="control">
          <input class="input" type="text" name="manufacturer" placeholder="e.g. Sony">
        </div>
      </div>

      <div class="field">
        <label class="label">Release Date</label>
        <div class="control">
          <input class="input" name="release_date" type="date">
        </div>
    </div>

    <div class="field is-grouped">
    <div class="control">
        <button class="button is-link">Submit</button>
    </div>
    <div class="control">
        <button class="button is-text">Cancel</button>
    </div>
    </div>
  </form>


<%- include('../partials/footer'); %>