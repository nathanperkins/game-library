<%- include('../partials/header', { page_title: page_title }); %>

<h1 class="title">
    Change Password
</h1>
<p class="subtitle is-4">
    Change your user account password
</p>
<div class="content">
    <h4>New password must be at least 8 characters long and have:</h4>
    <ul> 
        <li>at least one uppercase and one lowercase letter</li>
        <li>at least one number</li>
        <li>at least one special character</li>
    </ul>
</div>


<hr class="hr">

<form>
  
    <div class="field">
    <label class="label">Current password:</label>
    <div class="control">
        <input class="input" type="password" name="current_password" minlength="8">
    </div>
    </div>

    <div class="field">
    <label class="label">New password:</label>
    <div class="control">
        <input class="input" type="password" name="new_password" minlength="8">
    </div>
    </div>

       <div class="field">
    <label class="label">Confirm new password:</label>
    <div class="control">
        <input class="input" type="password" name="new_password_confirm" minlength="8">
    </div>
    </div>

    <div class="field is-grouped">
    <div class="control">
        <button class="button is-link">Submit</button>
    </div>
    <div class="control">
        <button class="button is-text">Cancel</button>
    </div>
    </div>
    
</form>

<%- include ../partials/footer %>