<%- include('../partials/header', { page_title: page_title }); %>

<% if (rows) { %>
<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
    <thead>
        <th>User ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Role</th>
    </thead>
    <tbody>
        <% rows.forEach( row => { %>
        <tr>
            <td><%= row.id %></td>
            <td><%= row.first_name %></td>
            <td><%= row.last_name %></td>
            <td><%= row.email %></td>
            <td><%= row.role %></td>
        </tr>
        <% }); %>
    </tbody>
</table>
<% } else { %>
No rows!
<% } %>

<%- include ../partials/footer %>